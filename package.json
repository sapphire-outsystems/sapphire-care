{
	"name": "sapphire-care",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"config": {
		"env_dev": "cross-env NODE_ENV=development ",
		"env_prod": "cross-env NODE_ENV=production ",
		"server_dev": "webpack-dev-server --config webpack.dev.js",
		"prod": "cross-env NODE_ENV=production && webpack --config webpack.prod.js"
	},
	"scripts": {
		"treta": "echo $npm_package_config_treta",
		"dev": "$npm_package_config_env_dev && $npm_package_config_server_dev",
		"dev_care": "$npm_package_config_env_dev && $npm_package_config_server_dev --env.url=care",
		"dev_style": "$npm_package_config_env_dev && $npm_package_config_server_dev --env.url=style",
		"prod": "$npm_package_config_prod",
		"new:build": "npm run prod && git add . && git commit -m \"New Release\" --allow-empty && git push origin master",
		"release:patch": "npm run new:build && release-it patch --ci",
		"release:minor": "npm run new:build && release-it minor --git.requireBranch=master",
		"release:major": "npm run new:build && release-it major --git.requireBranch=master"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"autoprefixer": "^9.7.4",
		"browser-sync-webpack-plugin": "^2.2.2",
		"chokidar": "^3.3.1",
		"clean-webpack-plugin": "^3.0.0",
		"cross-env": "^7.0.2",
		"css-loader": "^3.4.2",
		"dotenv": "^8.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-prettier": "^3.1.2",
		"file-loader": "^5.0.2",
		"mini-css-extract-plugin": "^0.9.0",
		"postcss-loader": "^3.0.0",
		"prettier": "^1.19.1",
		"prettier-stylelint": "^0.4.2",
		"release-it": "^13.3.1",
		"sass": "^1.26.3",
		"sass-loader": "^8.0.2",
		"style-loader": "^1.1.3",
		"stylelint": "^13.0.0",
		"stylelint-order": "^4.0.0",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10",
		"webpack-dev-server": "^3.10.1",
		"webpack-merge": "^4.2.2"
	},
	"dependencies": {
		"browser-sync": "^2.26.7",
		"fibers": "^4.0.2"
	}
}
